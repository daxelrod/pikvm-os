[Unit]
Description=Pi-KVM - Configure from file on boot
After=systemd-modules-load.service pikvm-firstboot.service
Before=kvmd-otg.service kvmd-nginx.service kvmd.service sshd.service

[Service]
Type=oneshot
ExecStart=/usr/local/bin/_pikvm-bootconfig.sh --do-the-thing
ExecStop=/bin/true
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
